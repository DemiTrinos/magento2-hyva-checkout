<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="checkout.payment.methods">
            <arguments>
                <argument name="magewire" xsi:type="object">
                    \MultiSafepay\MagewireCheckout\Payment\MethodListExtended
                </argument>
            </arguments>

            <!-- Payment Renderer: MultiSafepay iDEAL -->
            <block name="checkout.payment.method.multisafepay_ideal"
                   as="multisafepay_ideal"
                   template="MultiSafepay_MagewireCheckout::component/payment/method/multisafepay_ideal.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        \MultiSafepay\MagewireCheckout\Payment\Method\MultiSafepayIdeal
                    </argument>
                </arguments>
            </block>

            <!-- Payment Renderer: MultiSafepay Card Payment -->
            <block name="checkout.payment.method.multisafepay_creditcard"
                   as="multisafepay_creditcard"
                   template="MultiSafepay_MagewireCheckout::component/payment/method/multisafepay_creditcard.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        \MultiSafepay\MagewireCheckout\Payment\Method\MultiSafepayCreditCard
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
